@model WebApplication1.Application.ViewModels.ItemViewModel

<h1>Excluir Item</h1>

<h3>Tem certeza que deseja excluir este item?</h3>

<div>
    <dl>
        <dt>Modelo</dt>
        <dd>@Model.Modelo</dd>

        <dt>Categoria</dt>
        <dd>@Model.Categoria</dd>

        <dt>Patrimônio</dt>
        <dd>@Model.Patrimonio</dd>

        <dt>Número de Série</dt>
        <dd>@Model.NumeroSerie</dd>
    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button type="submit">Confirmar Exclusão</button>
    <a asp-action="Index">Cancelar</a>
</form>
