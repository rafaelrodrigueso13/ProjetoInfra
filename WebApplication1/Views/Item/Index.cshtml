@model IEnumerable<WebApplication1.Application.ViewModels.ItemViewModel>

@{
    ViewData["Title"] = "Itens";
}

<h2>Itens</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Item</a>
</p>

<div class="mb-3">
    <input type="text" id="searchBox" class="form-control" placeholder="Buscar por modelo, categoria, patrimônio ou número de série..." />
</div>

<div id="itemsContainer">
    @await Html.PartialAsync("_ItemListPartial", Model)
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            let searchTimeout;

            $('#searchBox').on('keyup', function() {
                clearTimeout(searchTimeout);
                
                const searchTerm = $(this).val();

                searchTimeout = setTimeout(function() {
                    $.ajax({
                        url: '@Url.Action("SearchItems", "Item")',
                        type: 'GET',
                        data: { searchTerm: searchTerm },
                        success: function(result) {
                            $('#itemsContainer').html(result);
                        },
                        error: function() {
                            alert('Erro ao buscar itens.');
                        }
                    });
                }, 300);
            });
        });
    </script>
}