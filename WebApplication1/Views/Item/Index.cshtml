@model IEnumerable<WebApplication1.Application.ViewModels.ItemViewModel>

@{
    ViewData["Title"] = "Itens";
}

<h2>Itens</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Item</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Modelo</th>
            <th>Categoria</th>
            <th>Patrimônio</th>
            <th>Número de Série</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Modelo</td>
                <td>@item.Categoria</td>
                <td>@item.Patrimonio</td>
                <td>@item.NumeroSerie</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
